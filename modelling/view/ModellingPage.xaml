<Page x:Class="GasStationModeling.modelling.view.ModellingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GasStationModeling.modelling.view"
      mc:Ignorable="d" 
      d:DesignHeight="800"
      Title="ModellingPage" Width="1137">

    <StackPanel Orientation="Horizontal" Height="776" Margin="10,24,-10,0" VerticalAlignment="Top" Width="1140" Background="White">
        <Grid Width="419">
            <TextBlock Style="{StaticResource BaseText}" 
                   FontSize="{StaticResource H1}" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   Margin="18,10,79,734"
                   Text="Информационное табло" Width="322"/>

            <TextBlock Style="{StaticResource BaseText}" 
                   FontSize="{StaticResource Medium}" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   Margin="19,0,336,704"
                   Text="Бензин:" Width="64" Height="25" VerticalAlignment="Bottom"/>
            <Border BorderBrush="Black" BorderThickness="10" HorizontalAlignment="Left" Height="157" Margin="19,73,0,0" VerticalAlignment="Top" Width="305"/>
            <DataGrid x:Name="FuelGrid" HorizontalAlignment="Left" Height="149" Margin="23,76,0,0" VerticalAlignment="Top" Width="297"/>


            <TextBlock Style="{StaticResource BaseText}" 
                   FontSize="{StaticResource Medium}" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   Margin="21,0,302,496"
                   Text="Транспорт:" Width="96" Height="24" VerticalAlignment="Bottom"/>
            <Border BorderBrush="Black" BorderThickness="10" HorizontalAlignment="Left" Height="179" Margin="21,285,0,0" VerticalAlignment="Top" Width="385">
                <DataGrid x:Name="TransportGrid" HorizontalAlignment="Left" Height="172" Margin="-8,-5,-5,-8" VerticalAlignment="Top" Width="378" SelectionChanged="TransportGrid_SelectionChanged"/>
            </Border>

            <TextBlock x:Name="CashCountInfo" Style="{StaticResource BaseText}" 
                   FontSize="{StaticResource Medium}" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Left" 
                   Margin="24,0,17,269"
                   Text="Количество денег в кассе:" Width="378" Height="24" VerticalAlignment="Bottom"/>

            <TextBlock x:Name="FuelCountInfo" Style="{StaticResource BaseText}" 
                   FontSize="{StaticResource Medium}" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Left" 
                   Margin="24,0,17,238"
                   Text="Количество топлива в ТБ:" Width="378" Height="26" VerticalAlignment="Bottom"/>

            <Button x:Name="GoBackButton" Style="{StaticResource AquaButton}" Content="Назад" Margin="26,696,213,24" Click="Button_Click"/>

        </Grid>
        <StackPanel/>

        <Grid Width="712">
            <StackPanel Name="StationImage" Orientation="Horizontal" Margin="0,0,0,119"/>

            <Grid Height="72" Margin="252,686,252,18">
                <Button x:Name="StartButton" Style="{StaticResource AquaButton}" Margin="124,12,36,11" Click="Button_Click" RenderTransformOrigin="0.5,0.5">
                    <Image Source="{StaticResource InfoButtonImage}" Height="63" RenderTransformOrigin="0.5,0.5" Width="67">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button x:Name="StopButton" Style="{StaticResource AquaButton}" Margin="36,12,125,11" Click="Button_Click" RenderTransformOrigin="0.5,0.5">
                    <Image Source="{StaticResource InfoButtonImage}" Height="40" Width="44"/>
                </Button>
            </Grid>

        </Grid>

    </StackPanel>
</Page>
