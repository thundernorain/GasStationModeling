<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GasStationModeling.styles">
    
    <Style x:Key="AquaButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AquaBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Medium}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="56, 16"/>
    </Style>

    <Style x:Key="AquaComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource AquaBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Medium}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="56, 16"/>
    </Style>

    <Style x:Key="AquaComboBoxItem" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="{StaticResource AquaBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Medium}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>